<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
 
    <h1>お問い合わせ</h1>
    <%= form_for(@contacts, url: choose_new_or_edit_contact) do |f| %>
      <% if @contacts.errors.any? %>
        <div id="error_explanation">
        # バリデーションエラーの件数を表示します。
        <h2><%= @contacts.errors.count %>件のエラーがあります。</h2>

        <ul>
        <% @contacts.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
      <% end %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      <br>
      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control' %>
      <br>
      <%= f.label :content %>
      <%= f.text_field :content, class: 'form-control' %>
      <br>
      <%= f.submit '送信',  class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>


