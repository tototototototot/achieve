<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <h3>以下の内容で、送信する。</h3>
    
    <%= form_for(@contacts) do |f| %>
      <!-- `f.hidden_field`を使用して、リクエストパラメータに値を設定できるようにしています。 -->
      <%= f.hidden_field :name %>
      <%= f.hidden_field :email %>
      <%= f.hidden_field :content %>
    
      <p>Name:<%= @contacts.name %></p>
      <p>Email:<%= @contacts.name %></p>
      <p>Content:<%= @contacts.content %></p>
      <%= f.submit "登録する",class: 'btn btn-primary btn-block' %>
    <% end %>
    
    <%= form_for(@contacts, url: new_contact_path, method: 'get') do |f| %>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :email %>
      <%= f.hidden_field :content %>
      <%= f.submit "もどる",class: 'btn btn-default btn-block', name: 'back' %>
    <% end %>
  </div>
</div>
